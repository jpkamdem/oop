{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "NodeNext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}